{
  "name": "@dxv/cli",
  "version": "3.0.0",
  "description": "A convenient command-line tool that wraps oxlint, dprint, tsc, and lightweight dependency audits",
  "main": "index.js",
  "type": "module",
  "bin": {
    "dxv": "bin/index.js"
  },
  "scripts": {
    "lint": "./bin/index.js lint -c .config/oxlintrc.json",
    "fmt": "./bin/index.js fmt -c .config/dprint.jsonc",
    "type": "./bin/index.js type -c .config/tsconfig.json",
    "deps": "./bin/index.js deps -c .config/dependencies.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sethvincent/dxv.git"
  },
  "author": "sethvincent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sethvincent/dxv/issues"
  },
  "homepage": "https://github.com/sethvincent/dxv#readme",
  "dependencies": {
    "bare-fs": "^4.4.5",
    "bare-os": "^3.6.2",
    "bare-path": "^3.0.0",
    "bare-subprocess": "^5.1.4",
    "dprint": "^0.50.2",
    "indentation": "^1.0.1",
    "mri": "^1.2.0",
    "oxlint": "^1.18.0",
    "oxlint-tsgolint": "^0.2.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "brittle": "^3.19.0"
  }
}
